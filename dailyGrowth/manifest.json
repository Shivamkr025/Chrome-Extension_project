{
    "manifest_version": 3,
    "name": "Daily Growth Checklist",
    "description": "A Chrome extension for daily growth checklist.",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },
    "icons": {
        "128": "logo.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}